<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clock In"
        android:id="@+id/buttonClockIn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:onClick="onClickClockIn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewClockedIn"
        android:layout_below="@+id/buttonClockIn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Lunch"
        android:id="@+id/buttonStartLunch"
        android:layout_marginTop="127dp"
        android:layout_below="@+id/textViewClockedIn"
        android:layout_toLeftOf="@+id/buttonEndLunch"
        android:layout_toStartOf="@+id/buttonEndLunch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Lunch"
        android:id="@+id/buttonEndLunch"
        android:layout_alignBaseline="@+id/buttonStartLunch"
        android:layout_alignBottom="@+id/buttonStartLunch"
        android:layout_alignRight="@+id/buttonClockIn"
        android:layout_alignEnd="@+id/buttonClockIn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewCurrentHours"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />

</RelativeLayout>
